<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Widget.Button.Toggle" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/bg_toggle</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">36sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textOff">@string/button_start</item>
        <item name="android:textOn">@string/button_stop</item>
        <item name="android:height">144dp</item>
        <item name="android:letterSpacing">0.1</item>
        <item name="android:minWidth">160dp</item>
        <item name="android:fontFamily">@font/gilroy_bold</item>
        <item name="fontFamily">@font/gilroy_bold</item>
    </style>

    <style name="Widget.NumberPicker" parent="android:Widget">
        <item name="np_dividerColor">@android:color/transparent</item>
        <item name="np_fadingEdgeStrength">1.0</item>
        <item name="np_formatter">%02d</item>
        <item name="np_selectedTextColor">@color/white</item>
        <item name="np_selectedTextSize">64dp</item>
        <item name="np_textColor">@color/white</item>
        <item name="np_textSize">64dp</item>
        <item name="np_wheelItemCount">5</item>
        <item name="np_selectedTypeface">sans-serif-black</item>
        <item name="np_typeface">sans-serif-black</item>
    </style>
</resources>